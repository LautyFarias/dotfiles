#!/bin/bash

eval "export CONFIG=$PWD"

# dotfiles
mv ~/.profile ~/.profile.old
mv ~/.zprofile ~/.zprofile.old
mv ~/.vimrc ~/.vimrc.old

ln "$CONFIG/dotfiles/.profile" ~/.profile
ln "$CONFIG/dotfiles/.zprofile" ~/.zprofile
ln "$CONFIG/dotfiles/.vimrc" ~/.vimrc

# .config folder
mv ~/.config/alacritty ~/.config/alacritty.old

ln -s "$CONFIG/.config/alacritty" ~/.config/alacritty
ln -s "$CONFIG/.config/nvim" ~/.config/nvim

# custom .bins
mv ~/.bin ~/.bin.old

ln -s "$CONFIG/.bin" ~/.bin
